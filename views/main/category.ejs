<% layout('layout') -%>


<div class="container">
	<div class="row">
		<% for (var i=0; i<products.length; i++) { %> 
		<div class="col-md-4">
			<a href="/product/<%= products[i]._id %>">
				<dir class="thumbnail">
					<img src="<%= products[i].image %>">
					<div class="caption">
						<h3><%= products[i].name %></h3>
						<p><b>Category:</b> <%= products[i].category.name %> <b>Brand:</b> <%= products[i].brand %> </p>
						<p><b>Supermarket:</b> <%= products[i].supermarket %></p>
						<p>$<%= products[i].price %></p>
					</div>
				</dir>
			</a>
		</div>
		<% } %>
	</div>
</div>