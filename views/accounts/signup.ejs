<% layout('layout') -%>

<div class="row">
	<dir class="col-lg-6 col-md-offset-3">

		<% if (errors.length > 0) { %>
			<div class="alert alert-danger alert-dismissible">
				<button type="button" class="close" data-dismmiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
				<%= errors %>
			</div>
		<% } %>	
		<form method="post">
			<h1>Signup</h1>
			<div class="form-group">
				<label="name">Name: </label>
				<input type="text" class="form-control" name="name" placeholder="Name Surname">
			</div>

			<div class="form-group">
		      <label="name"> gender <br> </label>
		      <label class="radio-inline">
		        <input type="radio" id="user-details-sex-male" name="gender" value="male" checked="checked"> Male
		      </label>
		      <label class="radio-inline">
		        <input type="radio" id="user-details-sex-female" name="gender" value="female"> Female
		      </label>
		    </div>

			<div class="form-group">
				<label="name">Year of Birth: </label>
				<input type="text" class="form-control" name="age" placeholder="ex: 1993 ">
			</div>


			<div class="form-group">
				<label="name">Email: </label>
				<input type="email" class="form-control" name="email">
			</div>
			<div class="form-group" >
				<label="name">Password: </label>
				<input type="password" class="form-control" name="password"s>
			</div>
			<button type="submit" class="btn btn-success">Submit</button>
		</form>
		<a class="btn btn-block btn-social btn-facebook" href="/auth/facebook">
			<i class="fa fa-facebook"></i> Sign in with Facebook
		</a>

	</dir>
</div>